# https://editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.tf,*.json}]
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
tab_width = 4
